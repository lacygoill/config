snippet t30 "read at most N lines out of file into array" Am
# \`&& (( ${#$2[@]} ))\`: \`while readarray\` will continue  to read nothing, so
# you have to check to see if it actually got data.
while readarray -t -n ${1:N} ${2:array} && (( ${#$2[@]} )); do
	for elem in "${$2[@]}"; do
		echo "$elem"
	done
done <${3:file}
endsnippet

snippet t31 "assign output of command to array variable" Am
# \`-t\` removes a trailing delimiter (default newline, unless changed with \`-d\`)
# from each line read.
readarray -t ${1:var} < <(${2:cmd})
$0
endsnippet

snippet t32 "turn string variable into array variable" Am
# Split on newlines.
# \`-t\` removes a trailing newline from each line read.
readarray -t ${1:var} <<<"$$1"

# Split on spaces.
# \`-t\` removes a trailing space from each word read.
readarray -t -d ' ' $1 < <(printf '%s' "$$1")

# Split on \`IFS\` whitespace characters:
$1=($$1)
# Example:
#
#     #               v--------v
#     $ var='a b c' ; var=($var) ; echo "${var[@]@A}"
#     declare -a var=([0]="a" [1]="b" [2]="c")
$0
endsnippet

snippet t33 "sort array elements by frequency" Am
declare -A freq
for elem in "${${1:array}[@]}"; do
	# Notice how we don't need to initialize \`freq\` to increment its
	# \`$elem\` key.  Bash behaves as if it was implicitly initialized with 0
	# (like awk).  Although, the command does return a non-zero status (which
	# would prevent the code from running if you \`set -e\`).
	(( freq["$elem"]++ ))
done
for elem in "${!freq[@]}"; do
	printf '%s\t%d\n' "$elem" "${freq["$elem"]}"
done | sort --key=2bn,2
$0
endsnippet

snippet t34 "get frequencies of lines from file into array" Am
declare -A ${1:array}
while IFS= read -r line; do
	(( $1["$line"]++ ))
done <${2:file}
endsnippet

