#!/bin/bash

# This script is useful to make `sh(1)` support readline commands.

# `libedit-dev`:  `--libedit-dev`
readonly -a DEPENDENCIES=(
  'libedit-dev'
)

source "${0%/*}/_lib"
extract_archive 'dash' 'http://gondor.apana.org.au/~herbert/dash/files/?C=M;O=D'
install_dependencies "${DEPENDENCIES[@]}"

./configure --prefix="$HOME/.local" --with-libedit \
  && make \
  && make install
