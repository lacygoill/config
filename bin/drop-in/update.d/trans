#!/bin/bash -

cd "$HOME/.local/bin/" || exit 1

if command -v trans >/dev/null; then
  printf 'current version: %s\n' "$(trans --version | head --lines=1)"
else
  echo 'trans is not currently installed'
fi

# Tell the terminal to turn off  all graphical attributes (because the output of
# the previous `trans(1)` command has turned on the bold attribute).
tput sgr0

curl --fail --location --show-error --silent --remote-name 'git.io/trans'
chmod u+x ./trans

printf 'new version: %s\n' "$(trans --version | head --lines=1)"
